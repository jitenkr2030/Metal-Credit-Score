# MCS (Metal Credit Score) Environment Configuration Template
# Copy this file to .env and update with your actual values

# ========================================
# BASIC CONFIGURATION
# ========================================

# Environment (development, staging, production)
NODE_ENV=development

# Server Configuration
PORT=3005
HOST=localhost

# ========================================
# DATABASE CONFIGURATION
# ========================================

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/mcs

# Redis Configuration
REDIS_URL=redis://localhost:6379

# ========================================
# SECURITY CONFIGURATION
# ========================================

# JWT Secret (IMPORTANT: Change this in production!)
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production

# Bcrypt Rounds (Higher = more secure but slower)
BCRYPT_ROUNDS=12

# ========================================
# ASSET PLATFORM API CONFIGURATION
# ========================================

# BGT (Gold Token) Platform
BGT_API_URL=http://localhost:3001/api
BGT_API_TOKEN=your-bgt-api-token-here

# BST (Silver Token) Platform
BST_API_URL=http://localhost:3002/api
BST_API_TOKEN=your-bst-api-token-here

# BPT (Platinum Token) Platform
BPT_API_URL=http://localhost:3003/api
BPT_API_TOKEN=your-bpt-api-token-here

# BINR (Stablecoin) Platform
BINR_API_URL=http://localhost:3004/api
BINR_API_TOKEN=your-binr-api-token-here

# ========================================
# CORS AND ORIGINS
# ========================================

# Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:3005

# ========================================
# RATE LIMITING
# ========================================

# Rate limit per IP per window (requests)
RATE_LIMIT_MAX=200

# Rate limit window (milliseconds)
RATE_LIMIT_WINDOW_MS=900000

# ========================================
# LOGGING CONFIGURATION
# ========================================

# Log Level (error, warn, info, verbose, debug)
LOG_LEVEL=info

# Log File Paths
LOG_ERROR_FILE=logs/error.log
LOG_COMBINED_FILE=logs/combined.log

# ========================================
# MCS SPECIFIC CONFIGURATION
# ========================================

# Scoring Configuration
MCS_MIN_SCORE=300
MCS_MAX_SCORE=900

# Cache Duration (milliseconds)
MCS_CACHE_DURATION=300000

# Batch Processing Configuration
MCS_BATCH_SIZE=10
MCS_MAX_BATCH_SIZE=100

# Platform Health Check Interval (milliseconds)
MCS_HEALTH_CHECK_INTERVAL=30000

# ========================================
# EMAIL CONFIGURATION (Optional)
# ========================================

# SMTP Configuration for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ========================================
# SSL/TLS CONFIGURATION (Production)
# ========================================

# SSL Certificate Paths (for HTTPS)
SSL_CERT_PATH=certificates/mcs.crt
SSL_KEY_PATH=certificates/mcs.key

# Force HTTPS in production
FORCE_HTTPS=false

# ========================================
# MONITORING AND ALERTS
# ========================================

# Alert Configuration
ALERT_EMAIL=admin@yourcompany.com
SLACK_WEBHOOK_URL=

# Monitoring Endpoints
ENABLE_METRICS=true
METRICS_PORT=9090

# ========================================
# THIRD-PARTY INTEGRATIONS
# ========================================

# Payment Gateway (if needed)
PAYMENT_GATEWAY_API_KEY=
PAYMENT_GATEWAY_SECRET=

# SMS Service (for notifications)
SMS_API_KEY=
SMS_API_SECRET=
SMS_SENDER_ID=MCSAPI

# ========================================
# FEATURE FLAGS
# ========================================

# Enable/disable features
ENABLE_BATCH_PROCESSING=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_FRAUD_DETECTION=true
ENABLE_EXPORT_FEATURES=true

# ========================================
# DEVELOPMENT OPTIONS
# ========================================

# Enable development features
ENABLE_DEBUG_MODE=true
ENABLE_REQUEST_LOGGING=true
MOCK_DATA_MODE=false

# ========================================
# PRODUCTION OVERRIDES
# ========================================

# These should be overridden in production
# PRODUCTION_MONGODB_URI=mongodb://prod-mongo:27017/mcs
# PRODUCTION_REDIS_URL=redis://prod-redis:6379
# PRODUCTION_JWT_SECRET=your-super-secure-production-secret
# PRODUCTION_SSL_CERT_PATH=/etc/ssl/certs/mcs.crt
# PRODUCTION_SSL_KEY_PATH=/etc/ssl/private/mcs.key